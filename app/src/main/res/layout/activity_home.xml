<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <!-- Top Navigation Bar -->




    <!-- Profile & Search Bar Section -->

    <!-- Quick Access Tabs -->

    <!-- Tracked Items List -->

    <LinearLayout
            android:id="@+id/profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

        <ImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/wolverine" />

        <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, User!"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

        <EditText
                android:id="@+id/search_bar"
                android:layout_width="177dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Search items" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_section"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="56dp">

        <com.google.android.material.tabs.TabItem android:text="Devices" />

        <com.google.android.material.tabs.TabItem android:text="Items" />

        <com.google.android.material.tabs.TabItem android:text="Vehicles" />

        <com.google.android.material.tabs.TabItem android:text="Other" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_tracked_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            app:layout_constraintBottom_toTopOf="@id/alerts_section"/>

    <!-- Alerts & Community Proximity Forum -->
    <LinearLayout
            android:id="@+id/alerts_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/recycler_tracked_items"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="Recent Alerts"
                android:textSize="16sp"
                android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_alerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <Button
                android:id="@+id/btn_report_lost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Lost Item" />
    </LinearLayout>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Find Your Belongings!"
            android:id="@+id/editTextText"
            tools:layout_editor_absoluteY="82dp"
            tools:layout_editor_absoluteX="115dp" />
</androidx.constraintlayout.widget.ConstraintLayout>