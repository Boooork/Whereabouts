<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Top Navigation Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        app:title="Whereabouts"
        app:titleTextColor="@android:color/white"
       >

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/whereabouts_logo"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Profile & Search Bar Section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_user"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="@string/search_items_devices" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
    </LinearLayout>

    <!-- Quick Access Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_section">

        
    </com.google.android.material.tabs.TabLayout>

    <!-- Tracked Items List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_tracked_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toTopOf="@id/alerts_section"/>

    <!-- Alerts & Community Proximity Forum -->
    <LinearLayout
        android:id="@+id/alerts_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/recycler_tracked_items"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:text="@string/recent_alerts"
            android:textSize="16sp"
            android:textStyle="bold"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_alerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_report_lost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_lost_item" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>